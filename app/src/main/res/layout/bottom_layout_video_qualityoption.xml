<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_quality"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="@dimen/_15sdp">

    <ImageView
        android:id="@+id/Image_quality_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_19sdp"
        android:src="@drawable/ic_baseline_check"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tv_video_quality_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_video_quality_option" />

    <TextView
        android:id="@+id/tv_video_quality_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/lato_semibold"
        android:paddingStart="@dimen/_10sdp"
        android:text="Auto (480p)"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@+id/Image_quality_video"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>