<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:background="@drawable/dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/downloadID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:fontFamily="@font/lato_medium"
        android:paddingTop="@dimen/_10sdp"
        android:text="@string/downloading_1_video"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_progress_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/lato_medium"
        android:paddingTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@+id/downloadID"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="60%" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="8dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:minHeight="8dp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:progressDrawable="@drawable/seekbar_progress"
        android:theme="@style/seekbaartheme"
        app:layout_constraintStart_toStartOf="@+id/downloadID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/downloadID"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
