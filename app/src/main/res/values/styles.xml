<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StatusBarScreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">10sp</item>
        <item name="android:colorBackground">#000</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:editTextColor">@android:color/black</item>
    </style>

    <style name="TextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavigationView" parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/separater</item>z
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="seekbaartheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="progressbaartheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="switchTheme" parent="Theme.AppCompat.Light">

        <item name="colorControlNormal">@color/view_grey</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_btn_custom_selector</item>
    </style>

    <style name="Custom_Dialog" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MyTabLayout1" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tabTextAppearanceTopPerformance</item>
    </style>

    <style name="tabTextAppearanceTopPerformance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/lato_regular</item>
     </style>
</resources>
